{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h2>Recherche avancée</h2>
    <div class="row">
        <div class="col-sm-12">
            {{ form(search_form) }}
        </div>
    </div>

    {% if app.request.method == 'POST' %}
    <div class="row">
        {% if books|length == 0 %}
            <h2>Aucuns Résultats</h2>
            {% else %}
            <div class="col-sm-12">
                <h2>Résultats :</h2>
            </div>
                {% for book in books %}
                    <div class="col-sm-4">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="{{ asset('upload/'~book.image.name) }}" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">{{ book.title }}</h5>
                                <p class="card-text">{{ book.content|truncate(100) }}</p>
                                <a href="{{ path('book_details', {id:book.id}) }}" class="btn btn-primary">Go</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
        {% endif %}
    </div>
    {% endif %}
</div>
{% endblock body %}